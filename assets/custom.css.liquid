{% comment %}styling of the Klaviyo back in stock button / text {% endcomment %}
a.klaviyo-bis-trigger {color: #4E4E4E;}

{% comment %}support for mobile AND desktop image upload for the image banner section{% endcomment %}
@media screen and (min-width: 750px) {a.banner__media.media > img.mob {display: none;}}
@media screen and (max-width: 749px) {a.banner__media.media > img.dt {display: none;}}

{% comment %}Used for showing variant images instead of buttons for choosing color variant{% endcomment %}
.product-form__input input[type='radio'] + label.color {
  padding: 0;
  overflow: hidden;
  border-color: transparent;
}
.product-form__input input[type='radio'] + label.color > img {
  max-width: 59px;
  pointer-events: none;
}

{% comment %} Styling for the btns sections that is used for getting "button links" {% endcomment %}
section.shopify-section.spaced-section.btns {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}
section.shopify-section.spaced-section.btns > a {
  margin: 0 5px 10px;
  text-decoration: none;
  text-align: center;
}

a.banner__media.media {
  z-index: 2;
}
button.product-form__submit.button--full-width {
  max-width: 550px;
}
@media screen and (min-width: 990px) {
  .product:not(.product--no-media):not(.featured-product) .product__media-wrapper {
    max-width: 34%;
    width: calc(34% - 1rem / 2);
  }
  .product:not(.product--no-media):not(.featured-product) .product__info-wrapper {
    padding-left: 4rem;
    max-width: 66%;
    width: calc(66% - 1rem / 2);
  }
}
{% comment %}Hide color options for disabled colors {% endcomment %}
.product-form__input input[type="radio"][name="Color"].disabled+label,
.product-form__input input[type="radio"][name="Color"]:disabled+label {display: none;}
.button {border-radius: 25px;}
.button:after {inset: unset;}
section.spaced-section--full-width+section.spaced-section--full-width {margin-top: {{ settings.bannerspace }}px;}
/*buttons homepage section spacing*/
.spaced-section {margin: 5rem auto;}
/*collection swatches layout fix*/
ul.product-grid div.card-wrapper {height: auto;}
{% comment %}This is some styling for the variant images under each product used on collection pages and search{% endcomment %}
.product-groups__images img {width: 60px;}
.product-groups__images a:hover img {border:  solid 1px black;}
@media screen and (max-width: 798px){.product-groups__images img {width: 40px;}}
div.product-groups__images {
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
}
div.product-groups__images > a.other-product-image {
  margin: 0 2px;
}
/*banner links and header submenus*/
div.banner__content {
  z-index: 1;
}
/*sold out styles fix*/
.product-form__input input[type="radio"]:disabled + label, .product-form__input input[type="radio"].disabled + label {
  border-color: rgba(78, 78, 78, 0.4);
  color: rgba(78, 78, 78, 0.4);
  text-decoration: line-through;
}
.product-form__input input[type="radio"]:disabled:checked + label, .product-form__input input[type="radio"].disabled:checked + label {
  color: #bfbfbf;
}
img.cart-item__image {object-fit: contain;}
/* buttons' center dots fix */
.button:after {content: none!important;}
div.pagination-wrapper.more {text-align: center;}
div.pagination-wrapper.more>a {pointer-events: none;}